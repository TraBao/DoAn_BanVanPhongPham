@model StationeryShop.Models.Product

@{
    ViewData["Title"] = "Xác Nhận Xóa";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Giá</dt>
        <dd class="col-sm-9">@Model.Price.ToString("N0")</dd>
        <dt class="col-sm-3">Danh mục</dt>
        <dd class="col-sm-9">@Model.Category.CategoryName</dd>
    </dl>

    <form asp-action="DeleteProduct">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>
