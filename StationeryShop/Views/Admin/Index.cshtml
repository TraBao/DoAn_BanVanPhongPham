@model IEnumerable<StationeryShop.Models.Product>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="AddProduct" class="btn btn-primary">Thêm Sản Phẩm Mới</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên Sản Phẩm</th>
            <th>Giá</th>
            <th>Số lượng tồn</th>
            <th>Danh mục</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0")</td>
                <td>@item.StockQuantity</td>
                <td>@item.Category.CategoryName</td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@item.ProductId" class="btn btn-sm btn-info">Sửa</a> |
                    <a asp-action="DeleteProduct" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
